<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background"
    tools:context="com.sdot.yidai.billfragment.EduFragment">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y300"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y20"
                app:cardCornerRadius="@dimen/x20"
                app:cardElevation="@dimen/x10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_shape">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/pic_bj_ljjk" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/sjsh_sign" />


                    <RelativeLayout
                        android:layout_marginTop="@dimen/y40"
                        android:id="@+id/textView7_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:text="总可用额度"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/intro_txt_size" />


                        <TextView
                            android:id="@+id/back_now"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/sjsh_back_shape"
                            android:paddingBottom="@dimen/y10"
                            android:paddingLeft="@dimen/x30"
                            android:paddingRight="@dimen/x10"
                            android:paddingTop="@dimen/y10"
                            android:text="立即还款"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/intro_txt_size" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7_layout"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/edu_size" />
                    
                    <TextView
                        android:id="@+id/late_eedu"
                        android:layout_marginTop="@dimen/y4"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/total_money"
                        android:textSize="@dimen/intro_txt_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                    <View
                        android:id="@+id/ss_lime"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_marginTop="@dimen/y10"
                        android:layout_below="@+id/late_eedu"
                        android:background="#1ccbfa"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"></View>

                    <View
                        android:layout_marginTop="@dimen/y10"
                        android:layout_marginBottom="@dimen/y16"
                        android:background="#1ccbfa"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ss_lime"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"></View>

                    <View
                        android:id="@+id/center_view"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="invisible"></View>

                    <TextView
                        android:layout_below="@+id/ss_lime"
                        android:id="@+id/use_edu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_toLeftOf="@+id/center_view"
                        android:layout_toStartOf="@+id/center_view"
                        android:paddingBottom="@dimen/y10"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/main_intro_txt" />

                    <TextView
                        android:layout_below="@+id/ss_lime"
                        android:id="@+id/limit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_toEndOf="@+id/use_edu"
                        android:layout_toRightOf="@+id/use_edu"
                        android:paddingBottom="@dimen/y10"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/main_intro_txt" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/com_kf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@mipmap/icon_kefu"
                    android:paddingBottom="@dimen/y10"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:paddingTop="@dimen/y10"
                    android:text="客服" />


                <TextView
                    android:id="@+id/late_edu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/borrow_now"
                    android:layout_alignBottom="@+id/borrow_now"
                    android:layout_marginLeft="@dimen/x34"
                    android:layout_marginStart="@dimen/x34"
                    android:layout_toEndOf="@+id/com_kf"
                    android:layout_toRightOf="@+id/com_kf"
                    android:text="剩余额度"
                    android:textColor="@color/sjsh_money" />


                <TextView
                    android:id="@+id/borrow_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginStart="@dimen/x40"
                    android:background="@color/sjsh_ed_bj"
                    android:paddingBottom="@dimen/y30"
                    android:paddingLeft="@dimen/x50"
                    android:paddingRight="@dimen/x50"
                    android:paddingTop="@dimen/y30"
                    android:text="立即借款"
                    android:textColor="@color/colorPrimary" />

            </RelativeLayout>

        </RelativeLayout>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>
