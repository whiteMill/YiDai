<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/linear_click_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="5dp">

   <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:text="员工姓名" />

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView30"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/textView30"
                android:layout_toRightOf="@+id/textView30"
                android:text=""/>
        </RelativeLayout>
        
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/deep_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:text="电话号码" />

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/employee_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView31"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/textView31"
                android:layout_toRightOf="@+id/textView31"
                android:text="" />

        </RelativeLayout>

   </LinearLayout>





</android.support.v7.widget.CardView>