<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background"
    tools:context="com.sdot.yidai.fragment.company.AddStaffActivity">

    <include layout="@layout/title_layout"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/title_re_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="0.5dp"
            android:background="@drawable/linear_click_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:text="员工姓名" />

            <EditText
                android:background="@null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="请输入员工姓名"
                android:textSize="@dimen/login_txt_size"
                android:id="@+id/staff_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView27"
                android:layout_marginLeft="130dp"
                android:layout_marginStart="130dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="0.5dp"
            android:background="@drawable/linear_click_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:text="员工手机号" />

            <EditText
                android:hint="请输入员工手机号"
                android:background="@null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="number"
                android:textSize="@dimen/login_txt_size"
                android:id="@+id/staff_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginStart="130dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="0.5dp"
            android:background="@drawable/linear_click_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:text="验证码" />

            <EditText
                android:background="@null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/yzm"
                android:inputType="number"
                android:layout_toLeftOf="@+id/get_yzma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginStart="130dp"
                android:textSize="@dimen/login_txt_size"
                android:hint="请输入验证码"
                android:text="" />


            <TextView
                android:id="@+id/get_yzma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/yzm_selector"
                android:clickable="true"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="点击获取"
                android:textSize="@dimen/tips_size" />
        </RelativeLayout>

        <Button
            android:id="@+id/addStaffButton"
            android:layout_marginTop="15dp"
            android:text="添加员工"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/log_btn_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
