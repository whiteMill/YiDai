<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/no"
            android:singleLine="true"
            android:maxEms="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="" />

        <TextView
            android:id="@+id/no_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/log_btn_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="未还清"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

   <View
       android:layout_marginTop="5dp"
       android:id="@+id/state_line"
       android:layout_below="@+id/state_layout"
       android:background="@color/line_color"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"></View>

    <TextView
        android:id="@+id/jiekuan_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/state_line"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="借款金额" />

    <TextView
        android:id="@+id/shengyu_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jiekuan_txt"
        android:layout_alignStart="@+id/jiekuan_txt"
        android:layout_below="@+id/jiekuan_txt"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="剩余应还" />

    <TextView
        android:id="@+id/qixian_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shengyu_txt"
        android:layout_alignLeft="@+id/shengyu_txt"
        android:layout_below="@+id/shengyu_txt"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="期限" />

    <TextView
        android:id="@+id/jiekuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/jiekuan_txt"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="" />

    <TextView
        android:id="@+id/shengyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/jiekuan"
        android:layout_alignRight="@+id/jiekuan"
        android:layout_below="@+id/jiekuan"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="" />

    <TextView
        android:id="@+id/qixian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/shengyu"
        android:layout_alignRight="@+id/shengyu"
        android:layout_below="@+id/shengyu"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="" />


</RelativeLayout>